{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",

    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false
  },
  "files": [
    "./node_modules/@types/node/index.d.ts",
    "./node_modules/@types/mocha/index.d.ts"
  ],
  "include": [
    "*.d.ts",
    "src/**/*", "../tschievo/packages/tschievo-api/src/auth/JwtVerifier.ts", "../tschievo/packages/tschievo-api/src/auth/Authorizer.ts", "../tschievo/packages/tschievo-api/src/auth/AuthPolicy.ts", "../tschievo/packages/tschievo-api/src/auth/AuthPolicy.js", "../tschievo/packages/tschievo-api/src/auth/authpolicy/AuthPolicy.js"
    
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
